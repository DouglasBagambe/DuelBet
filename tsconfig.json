{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "jsx": "preserve",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*",
    "frontend/pages",
    "frontend/components",
    "../gaming_challenge/target/types/**/*.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "frontend/components/GamingChallenge.tsx"]
}
